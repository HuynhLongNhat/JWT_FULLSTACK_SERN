<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List user</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row ">
            <div class="user-infor-container">
                <form method="POST" action="/user/create-user">
                    <div class=" mt-3">
                        <h3>
                            Create a new user :
                        </h3>
                    </div>
                    <div class=" form-group col-6 mt-3 mb-3">
                        <label for="email" class="mb-1">Email address</label>
                        <input type="email" class="form-control" required id="email" name="email"
                            placeholder="Enter email">
                    </div>
                    <div class="col-6"></div>

                    <div class="form-group col-6 mb-3">
                        <label for="password" class="mb-1">Password</label>
                        <input type="password" class="form-control" required id="password" name="password"
                            placeholder="Password">
                    </div>
                    <div class="col-6"></div>
                    <div class="form-group col-6" ">
                        <label for=" username" class="mb-1">User name</label>
                        <input type="text" class="form-control" required name="username" id="username">
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </div>

                    </div?>

                </form>
            </div>
            <div class="table-user mt-3">
                <h3 class="">Table users:</h3>
                <table class="table table-hover table-bordered">
            </div>
        </div>
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Email</th>
                <th scope="col">Username</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            <% userList.forEach(function(item , index){%>

                <tr>
                    <th scope="row">
                        <%= index +1%>
                    </th>
                    <td>
                        <%= item.email%>
                    </td>
                    <td>
                        <%= item.username%>
                    </td>
                    <td>
                        <form style="display: inline" action="/update-user/<%= item.id%>" method="get">
                            <button class="btn btn-warning"> Edit</button>
                        </form>
                        <form style="display: inline" action="/delete-user/<%= item.id%>" method="POST">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>

                </tr>

                <%})%>

        </tbody>
        </table>
    </div>
</body>

</html>